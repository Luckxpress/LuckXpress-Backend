<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Security-focused SpotBugs configuration for LuckXpress -->
    
    <!-- Focus on security vulnerabilities -->
    <Match>
        <Bug category="SECURITY"/>
    </Match>
    
    <!-- Bad practices that could lead to security issues -->
    <Match>
        <Bug category="BAD_PRACTICE"/>
    </Match>
    
    <!-- Performance issues that could be exploited -->
    <Match>
        <Bug category="PERFORMANCE"/>
    </Match>
    
    <!-- Malicious code detection -->
    <Match>
        <Bug category="MALICIOUS_CODE"/>
    </Match>
    
    <!-- Specific security-related bug patterns -->
    <Match>
        <Bug pattern="SQL_INJECTION_HIBERNATE"/>
    </Match>
    <Match>
        <Bug pattern="SQL_INJECTION_JPA"/>
    </Match>
    <Match>
        <Bug pattern="COMMAND_INJECTION"/>
    </Match>
    <Match>
        <Bug pattern="PATH_TRAVERSAL_IN"/>
    </Match>
    <Match>
        <Bug pattern="PATH_TRAVERSAL_OUT"/>
    </Match>
    <Match>
        <Bug pattern="XSS_REQUEST_PARAMETER_TO_SEND_ERROR"/>
    </Match>
    <Match>
        <Bug pattern="XSS_REQUEST_PARAMETER_TO_JSP_WRITER"/>
    </Match>
    <Match>
        <Bug pattern="CIPHER_INTEGRITY"/>
    </Match>
    <Match>
        <Bug pattern="WEAK_MESSAGE_DIGEST_MD5"/>
    </Match>
    <Match>
        <Bug pattern="WEAK_MESSAGE_DIGEST_SHA1"/>
    </Match>
    <Match>
        <Bug pattern="HARD_CODE_PASSWORD"/>
    </Match>
    <Match>
        <Bug pattern="HARD_CODE_KEY"/>
    </Match>
    <Match>
        <Bug pattern="PREDICTABLE_RANDOM"/>
    </Match>
    <Match>
        <Bug pattern="UNVALIDATED_REDIRECT"/>
    </Match>
    
    <!-- Exclude test files from security checks -->
    <Match>
        <Class name="~.*Test.*"/>
    </Match>
    <Match>
        <Class name="~.*IT.*"/>
    </Match>
    
    <!-- Exclude generated code -->
    <Match>
        <Class name="~.*\$.*"/>
    </Match>
    
    <!-- Gambling-specific security checks -->
    <Match>
        <Bug pattern="PREDICTABLE_RANDOM"/>
        <Priority value="1"/>
    </Match>
    
    <!-- Financial transaction security -->
    <Match>
        <Bug pattern="CIPHER_INTEGRITY"/>
        <Priority value="1"/>
    </Match>
    
    <!-- Exclude known false positives for Spring Boot -->
    <Match>
        <Bug pattern="SPRING_CSRF_PROTECTION_DISABLED"/>
        <Class name="~.*Config.*"/>
    </Match>
</FindBugsFilter>

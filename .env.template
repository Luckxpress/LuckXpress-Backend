# LuckXpress Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=luckxpress
DB_USER=luckxpress
DB_PASSWORD=changeme_strong_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=changeme_redis_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=prod
BUILD_VERSION=1.0.0
ENVIRONMENT=production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a strong JWT secret (minimum 512 bits)
JWT_SECRET=changeme_jwt_secret_key_minimum_64_characters_for_security

# OAuth2 Configuration
OAUTH2_CLIENT_ID=luckxpress
OAUTH2_CLIENT_SECRET=changeme_oauth2_secret

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Sentry Configuration for Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana_password

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration (for Gold Coin purchases)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# KYC Service Configuration
KYC_PROVIDER_API_KEY=your_kyc_provider_api_key
KYC_PROVIDER_URL=https://api.kycprovider.com/v1

# Email Service Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@luckxpress.com

# SMS Service Configuration  
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# COMPLIANCE AND REGULATORY
# =============================================================================
# Compliance Officer Email for Alerts
COMPLIANCE_EMAIL=compliance@luckxpress.com

# Maximum Transaction Limits (in USD)
MAX_DAILY_DEPOSIT=10000.00
MAX_DAILY_WITHDRAWAL=25000.00
MAX_SINGLE_TRANSACTION=5000.00

# =============================================================================
# PERFORMANCE AND SCALING
# =============================================================================
# JVM Memory Configuration
JAVA_OPTS_MEMORY=-XX:MaxRAMPercentage=75 -XX:InitialRAMPercentage=50

# Database Connection Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_MAX_LIFETIME=300000

# Redis Connection Pool
REDIS_POOL_MAX_ACTIVE=10
REDIS_POOL_MAX_IDLE=5
REDIS_POOL_MIN_IDLE=1

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Set these for development/staging environments only
# DEV_MODE=true
# LOG_LEVEL=DEBUG
# MOCK_PAYMENTS=true
# MOCK_KYC=true

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
# S3 Configuration for Backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BACKUP_BUCKET=luckxpress-backups

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# SSL Certificate Configuration (for production)
SSL_KEYSTORE_PATH=/app/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=changeme_keystore_password
SSL_KEY_ALIAS=luckxpress
